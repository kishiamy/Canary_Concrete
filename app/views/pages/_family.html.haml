%li.li_menu
  =link_to page.title, page_path(page)
  %div
    =link_to move_page_path(page), :class => 'btn btn-primary' do
      %i.icon-move.icon-white
      Move to other section
    =link_to edit_page_path(page), :class => 'btn btn-primary' do
      %i.icon-pencil.icon-white
      Edit
    =link_to page_path(page), :class => 'btn btn-danger', :confirm =>'Are you sure?', :method => :delete do
      %i.icon-trash.icon-white
      Delete
    =link_to new_page_page_path(page), :class => 'btn btn-primary' do
      %i.icon-plus.icon-white
      add sub-page
-if page[:children]
  %ul.subpages
    -page[:children].each do |child|
      = render :partial =>'family', :locals => { :page => child }
    

