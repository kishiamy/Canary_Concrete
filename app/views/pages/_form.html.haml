.span12
  = simple_form_for(@page, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f|
    = f.error_notification

    .form-inputs
      = f.input :title
      = f.input :content
      = f.association :page

    .form-actions.control-group
      = f.button :submit, t(@page.new_record? ? "create_page" : "update_page", scope: "general.manage") 
