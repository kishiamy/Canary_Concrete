%h2= t'devise.passwords.change' 
= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
  = f.error_notification
  = f.input :reset_password_token, :as => :hidden
  = f.full_error :reset_password_token

    = f.input :password, :label => t('devise.passwords.new'), :required => true
    = f.input :password_confirmation, :label => t('devise.passwords.confirm'), :required => true
  .actions
    = f.button :submit, t('devise.passwords.change_my')
= render "links"
