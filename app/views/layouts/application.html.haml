!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %title Canary Concrete
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}

    / Le HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    -if user_signed_in? and current_user.group.admin? 
      .navbar 
        .navbar-inner
          .container
            %ul.nav
              %li
                =link_to_unless_current t('languages.english'), locale: "en"
              %li
                =link_to_unless_current t('languages.spanish'), locale: "es"
              %li.dropdown
                %a{:href => "#menu1", :class => "dropdown-toggle", :'data-toggle' => "dropdown"}
                  =t"groups"
                  %b.caret
                %ul.dropdown-menu
                  =link_to (t"general.manage.manage_groups"), user_list_path
                  =link_to I18n.t("group.listing_groups"), groups_path
              %li.dropdown
                %a{:href => "#menu2", :class => "dropdown-toggle", :'data-toggle' => "dropdown"}
                  =t"pages"
                  %b.caret
                %ul.dropdown-menu
                  =link_to I18n.t("page.listing_pages"), pages_path
            %ul.nav.pull-right
              =render "devise/menu/registration_items"
              =render "devise/menu/login_items"
    -else 
      .navbar 
        .navbar-inner
          .container
            %ul.nav
              %li
                =link_to_unless_current t('languages.english'), locale: "en"
              %li
                =link_to_unless_current t('languages.spanish'), locale: "es"
    .container
      %header
      %ul.nav-menu
        - Page.where(:page_id => nil).each do |j|
          %li=link_to j.title, page_path(j)
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
      - flash.each do |name, msg|
        = content_tag :div, :class => "alert #{name == :error ? "alert-error" : "alert-success" }" do
          %a.close{:href => "#", :data => {:dismiss => "alert"} } Ã—
          = msg
      = yield
      %footer
        %p &copy; Canary Concrete 2012
